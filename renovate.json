{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:all"
  ],
  "timezone": "America/Los_Angeles",
  "schedule": [
    "before 10am on Monday"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "rust"
      ],
      "enabled": true
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "groupName": "Rust dependencies"
    },
    {
      "matchFileNames": [
        "rust-toolchain.toml"
      ],
      "enabled": true
    }
  ]
}
